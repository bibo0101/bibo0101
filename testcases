      reducer: {
        fcrmAlert: () => ({
          alertData: {
            status: "success",
            message: "Operation completed successfully.",
          },
        }),
      },
    });

    const { getByText } = render(
      <Provider store={mockStore}>
        <Alerts />
      </Provider>
    );

    expect(getByText("Operation completed successfully.")).toBeInTheDocument();
  });
